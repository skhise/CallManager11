<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="#00BCD4"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Action"
        android:textColor="#fff"

        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Status"
        android:padding="5dp"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/call_status_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/sppiner_back"
        android:layout_alignParentLeft="true"
        android:prompt="@string/title_status" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Action Taken"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/call_actionTaken_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/sppiner_back"
        android:prompt="@string/title_action_reason"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action Note"
        android:padding="5dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/action_note_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select"
        android:layout_margin="10px"
        android:textAlignment="textStart"
        android:gravity="start"
        android:lines="3"
        android:maxLines="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_apply_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Add"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_close_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#F44336"
            android:text="Close"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
</ScrollView>