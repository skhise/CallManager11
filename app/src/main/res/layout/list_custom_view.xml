<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/cardbg"
    android:adjustViewBounds="true"
    android:descendantFocusability="afterDescendants">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/system_call_id"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/call_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text="Shekhar Khise"
            android:layout_gravity="left|top"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/call_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="12-01-2018 12:30"
            android:textSize="12dp"
            android:paddingRight="5dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_settings_phone_black_24dp"/>
            <TextView
                android:id="@+id/call_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_vertical"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingRight="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/new_action_resent"
                android:layout_width="5pt"
                android:layout_height="5pt"
                android:layout_alignTop="@id/call_date_time"
                android:layout_alignRight="@id/call_date_time"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                android:textStyle="bold"
                android:background="@drawable/green_circle"/>
            <TextView
                android:id="@+id/new_action_any"
                android:layout_width="5pt"
                android:layout_height="5pt"
                android:layout_alignTop="@id/call_date_time"
                android:layout_alignRight="@id/call_date_time"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                android:textStyle="bold"
                android:background="@drawable/badge_circle"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_call_alive"
                />
            <TextView
                android:id="@+id/call_alive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff9800"
                android:text=""
                android:gravity="end"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>


</FrameLayout>
