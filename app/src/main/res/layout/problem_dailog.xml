<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:background="#00BCD4"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_marginBottom="15dp"
        android:text="Add Problem Description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:text="Description"/>

    <EditText
        android:id="@+id/add_problem_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write problem details here..."
        android:textColorHint="#000"
        android:textAlignment="textStart"
        android:gravity="start"
        android:background="@drawable/squre"
        android:lines="4"
        android:maxLines="5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_call_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Add Description"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_close_call_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#F44336"/>
    </LinearLayout>
</LinearLayout>